mixin row(id,text,type) 
   .row
      .col-2= text 
      .col-10
         input.form-control(id=id type=type)

#edit-modal.modal.fade(tabindex="=1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true")
   .modal-dialog.text-dark(role="document")
      .modal-content 
         .modal-body 
            +row(id="edit-name",text="Nombre",type="text")
            +row(id="edit-balance",text="Balance",type="number")

            button#editBtn.btn.btn-danger Editar

